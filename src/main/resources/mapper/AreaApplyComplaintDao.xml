<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdufs.demo.dao.AreaApplyComplaintDao">
    <insert id="insertAreaApplyComplaint" useGeneratedKeys="true">
        INSERT INTO
        cc_apply_punishment(apply_id,update_time)
        VALUES
        (#{applyId},#{updateTime})
    </insert>

    <select id="quertAreaApplyComplaints" resultType="com.gdufs.demo.entity.AreaApplyComplaint">
        SELECT *
        FROM cc_apply_punishment
        where status=#{status} and update_time>#{queryTime}
    </select>

    <update id="changeStatus">
        update cc_apply_punishment
        <set>
            <if test="status !=null">status=#{status},</if>
            <if test="complaintReason !=null">complaint_reason=#{complaintReason},</if>
            <if test="scoreChange!=null">score_change=#{scoreChange},</if>
            <if test="banTime!=null">ban_time=#{banTime},</if>
            <if test="admin1User !=null">admin1_user=#{admin1User},</if>
            <if test="admin2User !=null">admin2_user=#{admin2User},</if>
            <if test="updateTime !=null">update_time=#{updateTime},</if>
        </set>
        where id=#{id} and status!=2
    </update>
    <delete id="romoveAreaApplyComplaint">
        delete from cc_apply_punishment
        where
        apply_id=#{applyId}
    </delete>
</mapper>